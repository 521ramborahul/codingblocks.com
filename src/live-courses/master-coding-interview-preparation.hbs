<script>
    $(document).ready(function () {
        const targetTabName = window.location.hash.slice (1);
		const tabs = [
			'#tab-basic',
			'#basic',
			'#tab-cpp-bundle',
			'#cpp-bundle',
			'#tab-java-bundle',
			'#java-bundle'
		].map (id => $(id))

		if (! targetTabName) {
			return;
		}

		tabs.map (tab => tab.removeClass ('active'))

		$(`#${targetTabName}`).addClass ('active')
		$(`#tab-${targetTabName}`).addClass ('active')
    })
</script>
