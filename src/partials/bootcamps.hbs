<!--bootcamps-->
{{#with bootcampsSection}}
    <a id="bootcamps" class="in-page-link"></a>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h3 class="uppercase mb16">{{#if heading}}{{{heading}}}{{else}}bootcamps{{/if}}</h3>
                    <p class="lead mb64">{{# if content}}{{{content}}}{{else}}
                        Fast paced bootcamps for Beginners and Advanced Programmers{{/if}}</p>
                </div>
            </div>

            <div class="row">
                {{#if showAll}}
                    {{#each @root.bootcampsList}}
                        {{> course}}
                    {{/each}}
                {{else}}
                    {{#each bootcampsList}}
                        {{#each @root.bootcampsList}}
                            {{#ifEquals this.name ../this}}
                                {{> course}}
                            {{/ifEquals}}
                        {{/each}}
                    {{/each}}
                {{/if}}
            </div>
        </div>
    </section>
{{/with}}
<!--endbootcamps-->
