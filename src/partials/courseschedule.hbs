<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h4 class="mb16 text-center">Schedule</h4>
                <table class="table table-hover table-striped calendar">
                    <thead>
                    <tr>
                        <th></th>
                        <th>Date</th>
                        <th>Lecture</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each schedule}}
                        <tr>
                            <td class="text-center"><i class="fa fa-circle"></i></td>
                            <td>
                                <time class="date-time" datetime="{{date}}">{{#dateToStr date}}{{/dateToStr}}</time>
                            </td>
                            <td>{{topic}}</td>
                        </tr>
                    {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>